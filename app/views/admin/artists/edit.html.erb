<h1>アーティスト編集画面</h1>

<%= form_for(@artist, url: admin_artist_path, method: :patch) do |f| %>

    <div class="form-group has-icon">
    	
        <label>アーティスト名</label><br>
        <%= f.text_field :name %><br>

        <label>レーベル名</label><br>
        <%= f.text_field :label %><br>

        <label>公式サイトのURL</label><br>
        <%= f.text_area :hp %><br>

        <label>ツイッターアカウントID</label><br>
        <%= f.text_field :twitter %><br>

        <label>アーティスト画像</label><br>
        <%= attachment_image_tag @artist, :image, :fill, 60, 60 %>
   		<%= f.attachment_field :image, placeholder: "プロフィール画像" %><br>

		<label>おすすめ</label><br>
        <%= f.check_box :recommend,{},checked_value = "true",unchecked_value = "false" %><br>

    </div>

    <%= f.submit "変更を保存"%>

<% end %>
