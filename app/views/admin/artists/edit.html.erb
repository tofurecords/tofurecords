<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h3>アーティスト編集画面</h3>
            <div class="form_artist_edit">
                <%= bootstrap_form_for(@artist, url: admin_artist_path, method: :patch) do |f| %>
                    <%= f.text_field :name, label: "アーティスト名" %><br>
                    <%= f.text_area :copy, label: "キャッチコピー" %><br>
                    <%= f.text_area :intro, label: "紹介文" %><br>
                    <%= f.text_field :label, label: "レーベル名" %><br>
                    <%= f.text_area :hp, label: "公式サイトのURL" %><br>
                    <%= f.text_area :twitter_code, label: "ツイッター埋め込みコード ※height:1000px" %><br>
                    <a href=https://publish.twitter.com/# target="_blank">埋め込みコードの取得はこちらから</a><br><br><br>
                    <label>アーティスト画像</label><br>
                    <%= attachment_image_tag @artist, :image, :fill, 60, 60 %>
                    <%= f.attachment_field :image, placeholder: "プロフィール画像" %><br><br><br>
                    <%= f.submit "変更を保存"%>
                <% end %>
            </div>
        </div>
    </div>
</div>
