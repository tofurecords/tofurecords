<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3>アーティスト一覧</h3>
      <table class="table table-hover table-inverse">
        <thead>
         <tr>
           <th>ID No.</th>
           <th>アーティストイメージ</th>
           <th>アーティスト名</th>
           <th>レーベル名</th>
           <th>売上</th>
           <th><i class="fas fa-heart"></i></th>
           <th>HP</th>
           <th>Twitter</th>
           <th>Copy</th>
           <th>Intro</th>
         </tr>
        </thead>

       <% @artists.each do |a| %>
          <tbody>
           <tr>
            <td>
                <%= a.id %>
            </td>
            <td><%= attachment_image_tag a, :image, size: '30x30', format: 'jpeg', class: "", fallback: "no_image.png", alt: "No image" %></td>
            <td><%= link_to a.name, artist_path(a.id) %></td>
            <td><%= a.label %></td>
            <td><%= a.proceed %></td>
            <td><%= a.favorites.count %></td>
            <td><% if a.hp.present? %>
                  o
                <% else %>
                  x
                <% end %>
            </td>
            <td><% if a.twitter_code.present? %>
                  o
                <% else %>
                  x
                <% end %>
            </td>
            <td><% if a.copy.present? %>
                  o
                <% else %>
                  x
                <% end %>
            </td>
            <td><% if a.intro.present? %>
                  o
                <% else %>
                  x
                <% end %>
            </td>

            <td><%= link_to "編集", edit_admin_artist_path(a.id) %></td>
            <td>
               <%= link_to "削除", admin_artist_path(a.id),
                method: :delete,  data: { confirm: '削除してよろしいですか？' } %>
            </td>
           </tr>
          </tbody>
       <% end %>
      </table>
    </div>
  </div>
</div>