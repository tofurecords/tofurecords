<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :名前（カナ） %><br />
    <%= f.text_field :kana, autofocus: true, autocomplete: "kana" %>
  </div>




  <p>郵便番号</p>
<input type="text" name="user[post]" id="user_post" size="10" maxlength="8" onKeyUp="AjaxZip3.zip2addr(this,'','user[address]','user[address]');">



<p>都道府県+以降の住所</p>
<input type="text" name="user[address]" id="user_address" size="40">
<div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
  </div>

 <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
