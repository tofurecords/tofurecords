<div class="mypage_navi">
  <%= link_to user_favorites_path(user_id: @user) do %>
      <div>Favorite Artists</div>
    <% end %>
  <%= link_to user_boughts_path(user_id: @user) do %>
    <div>Purchase History</div>
  <% end %>
  <%= link_to new_user_request_path(user_id: @user) do %>
    <div>Requst</div>
  <% end %>
</div>
<div class="booksbody">

  <div>
    <% if notice %>
    <p id="notice"><%= notice %></p>
    <% end %>
  </div>

  <h3>User Info</h3>
  <div class="container">
    <div class="row">
      <div class="col-xs-offset-1">

<!-- <div class="usershow col-xs-offset-3"></div> -->

   <table class="table">
          <tr class="table2">
          <td class="table1 table2">名前</td>

           <td class="table3"> <%= @user.name %></td>
         </tr>
         <tr class="table2">
         <td class="table1 "> 名前（カナ）</td>
          <td class="table3"><%= @user.kana %></td>
        </tr>
        <tr class="table2">
        <td class="table1">郵便番号</td>
          <td class="table3"><%= @user.post %></td>
        </tr>
        <tr class="table2">
        <td class="table1">住所</td>
          <td class="table3"><%= @user.address %></td>
        </tr>
        <tr class="table2">
        <td class="table1">電話番号</td>
          <td class="table3"><%= @user.tel %></td>
        </tr>
        <tr class="table2">
        <td class="table1">メールアドレス</td>
          <td class="table3"><%= @user.email %></td>
        </tr>
        <tr class="table2">
        <td class="table1">パスワード</td>
          <td class="table3"><%= @user.password %></td>
        </tr>
      <% if current_user.admin?%>
        <tr class="table2">
        <td class="table1">こいつ嫌い</td>
          <td class="table3"><%= link_to "削除", user_path, method: :delete, data: {confirm: '退会させてよろしいですか?'}, class: "taikai" %></td>
        </tr>
      <% else %>
        <tr class="table2">
        <td class="table1">退会</td>
          <td class="table3"><%= link_to "退会希望の方はこちら", user_registration_path, method: :delete, data: {confirm: 'go to hell?'}, class: "taikai" %></td>
        </tr>
      <% end %>

      </table>

      <button type="button" class="btn btn-default">
        <%= link_to "編集", edit_user_path %>
      </button>

     </div>
     </div>
     </div>
     </div>