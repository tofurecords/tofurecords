</div>

<div class="new-items">
    <div class="new-items-container">
        <h3 class="new-items-title">New Items</h3>
        <div class="new-items-row clearfix">
            <div class="new-items-box">
                <div class="new-items-image"></div>
                <div class="new-items-text">
                    <h4 class="artist-name">Artist Name</h4>
                    <p class="cd-name">CD Name</p>
                </div>
            </div>
            <div class="new-items-box">
                <div class="new-items-image"></div>
                <div class="new-items-text">
                    <p class="artist-name">Artist Name</p>
                    <p class="cd-name">CD Name</p>
                </div>
            </div>
            <div class="new-items-box">
                <div class="new-items-image"></div>
                <div class="new-items-text">
                    <p class="artist-name">Artist Name</p>
                    <p class="cd-name">CD Name</p>
                </div>
            </div>
            <div class="new-items-box">
                <div class="new-items-image"></div>
                <div class="new-items-text">
                    <p class="artist-name">Artist Name</p>
                    <p class="cd-name">CD Name</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="top-artists clearfix">
    <div class="top-artists-container">
        <h3 class="top-artists-title">Top Artists</h3>
        <% @artists.each do |artist| %>
        <div class="">
          <%= link_to artist_path(artist.id) do %>
            <%= attachment_image_tag artist, :image, format: 'jpeg', class: "top-artists-box", fallback: "no_image.png", alt: "No image" %>
          <% end %>
        </div>
        <% end %>
        <button type="button" class="btn btn-default">
            <%= link_to "View More", artists_path %>
        </button>
    </div>
</div>

