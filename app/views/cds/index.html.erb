  <h3 class="cd_index_title">Products</h3>
  <div class="cd_index clearfix">
  	<div class="searchbox">
  	  <div id="nav-search">
		<%= form_tag cd_search_path, :method => 'get' do %>
		  <p>
        <div class="input-group">
		      <%= text_field_tag :search, params[:search], class:"search_form form-control" %>
          <span class="input-group-addon">
		        <%= link_to cd_search_path, method: :get, :name => nil do %>
               <i class='glyphicon glyphicon-search'></i>
             <% end %>
          </span>
        </div>
		  </p>
		<% end %>
	  </div>
    </div>

	<% @cds.each do |cd| %>
	  <div class="cd_jaket_box">
	   <%= link_to cd_path(cd), :target=>["_blank"] do %>
        <%= attachment_image_tag cd, :image, format: 'jpeg', class: "cd_jaket_index", fallback: "no_image.png", alt: "No image" %>
        <div class="mask">
       	 <div class="caption">
          <p class="cd_index_artist_name"><%= cd.artist.name %></p>
          <p class="cd_index_cd_title"><%= cd.title %></p>
         </div>
        </div>
    </div>
     <% end %>
  <% end %>
  </div>