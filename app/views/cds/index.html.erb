<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3 class="cd_index_title">Products</h3>
      <div class="cd_index clearfix">
      	<div class="a-s-form">
          <%= form_tag cd_search_path, :method => 'get' do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class:"form-control" %>
            <span class="input-group-btn">
            <%= submit_tag "Search", :name => nil, class:"btn btn-default"%>
            </span>
          </div>
          <% end %>
        </div>

    	<% @cds.each do |cd| %>
    	  <div class="cd_jaket_box">
    	   <%= link_to cd_path(cd), :target=>["_blank"] do %>
            <%= attachment_image_tag cd, :image, format: 'jpeg', class: "cd_jaket_img", fallback: "no_image.png", alt: "No image" %>
            <div class="mask">
           	 <div class="caption">
              <p class="cd_index_artist_name"><%= cd.artist.name %></p>
              <h5 class="cd_index_cd_title"><%= cd.title %></h5>
              <p class="cd_index_cd_price">Â¥<%= cd.price %></p>
             </div>
            </div>
        </div>
         <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>