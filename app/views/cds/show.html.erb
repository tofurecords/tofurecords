<div class="container cd_show">
  <div class="col-xs-12">
      <h3 class="cd_show_texit"><%= @cd.title %></h3>
      <div class="row">
        <div class="col-xs-5">
          <%= attachment_image_tag @cd, :image,  format: 'jpeg', fallback: "no_image.png", alt: "No image", size: '400x400', class: 'cd_show_image' %>
        </div>
        <div class="col-xs-5">
    　　　 <table class="table table-inverse cd_show_texit">
             <tr>
               <th>Ａｒｔｉｓｔ</th>
               <td>
                <%= link_to artist_path(@cd.artist.id) do %>
                  <%= @cd.artist.name %>
                <% end %>
               </td>
             </tr>
             <tr>
               <th>Ｇｅｎｒｅ</th>
               <td><%= @cd.genre %></td>
             </tr>
             <tr>
               <th>Ｒｅｌｅａｓｅ</th>
               <td><%= @cd.release %></td>
             </tr>
             <tr>
              <th>Ｐｒｉｃｅ</th>
              <td>￥<%= @cd.price %></td>
            </tr>
            <tr>
              <th>
                <% if @cd.stock > 0 %>
                <% else %>
                  <h5>在庫がありません</h5>
                <% end %>
              </th>
            </tr>
          </table>
        <!-- <div class="col-xs-2 cd_cartin"> -->
            <% if user_signed_in? %>
              <% if @cd.stock > 0 %>
                <%#= form_for @cartitem, url: cartitem_create_path(cd_id: @cd) do |item| %>
                 <%#= item.number_field :quantity %>
                 <%#= item.submit 'カートに入れる', class: 'fbtn cd_btn' %>
                <% end %>
              <%= button_to 'カートに入れる', cartitem_create_path(cd_id: @cd),class: 'fbtn cd_btn' %>
              <% else %>
              <% end %>
            <%# else %>
            <%# end %>
        <!-- </div> -->
          </div>
        </div>
      </div>


      <div class="row">

          <div class="col-xs-">
            <h4 class="cd_show_texit">Song list</h4>
            <table class="table table-inverse cd_show_texit">
              <th>
                <% @cd.discs.each do |disc| %>
                  Disc <%= disc.number %>
              </th>
                  <div class="row">
                    <div class="col-xs-8">
                      <th>
                        <% disc.songs.each do |song| %>
                          <%= song.name %><br>
                        <% end %>
                      </th>
                    </div>
                  </div>
              <% end %>
            </table>
          </div>

      </div>
    </div>
  </div>